const DigitalButler = ({ isOpen, toggle }) => {
  const [messages, setMessages] = useState([
    { id: 1, sender: 'bot', text: 'Good evening. How may I assist with your dining experience tonight?' }
  ]);
  const [input, setInput] = useState('');

  const handleSend = () => {
    if (!input.trim()) return;
    setMessages([...messages, { id: Date.now(), sender: 'user', text: input }]);
    setInput('');
    setTimeout(() => {
      setMessages(prev => [...prev, { id: Date.now() + 1, sender: 'bot', text: 'I have noted your request. A human concierge will review this shortly.' }]);
    }, 1000);
  };

  if (!isOpen) return (
    <button 
      onClick={toggle}
      className="fixed bottom-24 right-6 w-14 h-14 bg-[#C5A059] rounded-full shadow-[0_0_20px_rgba(197,160,89,0.4)] flex items-center justify-center text-black z-40 animate-pulse hover:animate-none transition-transform hover:scale-110"
    >
      <Bell size={24} fill="currentColor" />
    </button>
  );

  return (
    <div className="fixed bottom-24 right-6 w-80 sm:w-96 h-[500px] bg-[#121212] border border-[#C5A059]/30 rounded-2xl shadow-2xl flex flex-col z-40 overflow-hidden animate-in slide-in-from-bottom-10">
      <div className="bg-[#1a1a1a] p-4 flex justify-between items-center border-b border-[#333]">
        <div className="flex items-center gap-3">
          <div className="w-10 h-10 bg-[#C5A059] rounded-full flex items-center justify-center">
            <User size={20} className="text-black" />
          </div>
          <div>
            <h3 className="font-serif text-[#F0F0F0]">The Sovereign Butler</h3>
            <p className="text-xs text-[#C5A059]">Concierge Tier • Online</p>
          </div>
        </div>
        <button onClick={toggle} className="text-gray-400 hover:text-white"><X size={20} /></button>
      </div>

      <div className="flex-1 overflow-y-auto p-4 space-y-4">
        {messages.map(msg => (
          <div key={msg.id} className={`flex ${msg.sender === 'user' ? 'justify-end' : 'justify-start'}`}>
            <div className={`max-w-[80%] p-3 rounded-2xl text-sm ${msg.sender === 'user' ? 'bg-[#C5A059] text-black rounded-tr-none' : 'bg-[#333] text-gray-200 rounded-tl-none'}`}>
              {msg.text}
            </div>
          </div>
        ))}
      </div>

      <div className="p-4 bg-[#1a1a1a] border-t border-[#333]">
        <div className="flex items-center gap-2 bg-[#121212] p-2 rounded-xl border border-[#333]">
          <input 
            type="text" 
            value={input}
            onChange={(e) => setInput(e.target.value)}
            placeholder="Type your request..."
            className="flex-1 bg-transparent text-white text-sm focus:outline-none px-2"
            onKeyPress={(e) => e.key === 'Enter' && handleSend()}
          />
          <button onClick={handleSend} className="text-[#C5A059] p-2 hover:bg-[#333] rounded-full">
            <Send size={18} />
          </button>
        </div>
      </div>
    </div>
  );
};

const CommandOverlay = ({ status }) => (
  <div className="absolute top-4 left-4 right-4 flex justify-between items-start z-10">
    <div className="bg-black/60 backdrop-blur-md px-4 py-2 rounded-full border border-[#8B0000] flex items-center gap-2">
