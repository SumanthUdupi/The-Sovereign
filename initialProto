// --- UTILITY COMPONENTS ---

const GoldButton = ({ children, onClick, className = "", fullWidth = false }) => (
  <button 
    onClick={onClick}
    className={`
      bg-[#C5A059] hover:bg-[#D4B068] text-black font-semibold py-3 px-6 rounded-xl 
      transition-all duration-300 transform hover:scale-[1.02] active:scale-95 shadow-lg shadow-[#C5A059]/20
      ${fullWidth ? 'w-full' : ''} ${className}
    `}
  >
    {children}
  </button>
);

const GhostButton = ({ children, onClick, className = "" }) => (
  <button 
    onClick={onClick}
    className={`
      bg-transparent border border-[#C5A059] text-[#C5A059] font-medium py-3 px-6 rounded-xl 
      hover:bg-[#C5A059]/10 transition-all duration-300
      ${className}
    `}
  >
    {children}
  </button>
);

